# Environment Configuration for LookaheadRAG
# Copy this to .env and fill in your values

# === LLM Configuration ===
# Ollama (Local - Free)
OLLAMA_HOST=http://localhost:11434
OLLAMA_PLANNER_MODEL=llama3.2:3b
OLLAMA_SYNTHESIZER_MODEL=llama3.1:8b

# Groq (Free Tier - Get API key at console.groq.com)
GROQ_API_KEY=your_groq_api_key_here

# Google AI Studio (Free - Get API key at aistudio.google.com)
GOOGLE_API_KEY=your_google_api_key_here

# === Embedding Configuration ===
EMBEDDING_MODEL=all-MiniLM-L6-v2
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L6-v2

# === Vector Store ===
CHROMA_PERSIST_DIR=./data/chroma_db

# === Experiment Tracking (Optional) ===
WANDB_PROJECT=lookahead-rag
WANDB_ENTITY=your_wandb_username

# === Evaluation Settings ===
DEFAULT_TOP_K=5
MAX_CONTEXT_TOKENS=4096
SEED=42
